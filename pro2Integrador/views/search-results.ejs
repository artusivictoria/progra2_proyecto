<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header-->
	<% if (locals.user!=undefined) {%>

		<%- include('./partials/headerLogueado') %>
	
	  <% } else{ %>
	
		<%- include('./partials/header') %>
		
	  <%}%>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			
			<% for( let i = 0; i < prodBuscado.length; i++ ) { %>


				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/mercado/product/<%= prodBuscado[i].id %>">
							<figure class="product-box_image">
								
								<img src="/images/products/<%= prodBuscado[i].imagen %>" alt="imagen de <%= prodBuscado[i].nombre %>">
							</figure>
							<article class="product-box_data">
								
								<h2><%= prodBuscado[i].nombre %> </h2>
								<p>Publicado por <a href="/users/perfil"><%= prodBuscado[i].user.nombreUsuario %></a> </p>
								 
								
								<!-- temporal hasta que borre los productos que no tienen idUser, modifico esto por el if de arriba
								<h2><%= prodBuscado[i].nombre %> publicado por <% if (prodBuscado[i].user) { %><a href="/users/perfil"><%= prodBuscado[i].user.nombreUsuario %></a><% } else { %><p>Usuario desconocido sin id por que lo cargue cuando funcionaba mal algo de la base de datos de idUser</p><% } %></h2> 
								-->

								<p><%= prodBuscado[i].descripcion %></p>
								<p>Comentarios: 12</p>
								
							</article>
						</a>
					</section>
				</div>
		   
			<% } %>

 
	<!-- footer -->
		<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>